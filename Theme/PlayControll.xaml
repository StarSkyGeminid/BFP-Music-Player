        </ResourceDictionary>

    </UserControl.Resources>

    <Border Width="560"
            Height="90"
            Margin="20"
            Background="White"
            CornerRadius="15">
        <Grid HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Button Width="30"
                        Height="30"
                        Margin="30,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="#F4F5FE"
                        Command="{Binding AddPlaylistCommand}"
                        Foreground="#909195">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Border Width="{TemplateBinding Width}"
                                        Height="{TemplateBinding Height}"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="7" />

                                <Path Width="15"
                                      Height="15"
                                      Data="{StaticResource icon_love}"
                                      Fill="{Binding FillLoveIcon}"
                                      Stretch="Uniform"
                                      Stroke="{Binding StrokeLoveIcon}" />
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Width="30"
                        Height="30"
                        Margin="70,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="#F4F5FE"
                        Command="{Binding AddMusic}"
                        Foreground="#909195">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Border Width="{TemplateBinding Width}"
                                        Height="{TemplateBinding Height}"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="7" />

                                <Path Width="10"
                                      Height="10"
                                      Margin="10,-12,0,0"
                                      Data="{StaticResource icon_plus}"
                                      Stretch="Uniform"
                                      Stroke="{TemplateBinding Foreground}" />

                                <Path Width="13"
                                      Height="13"
                                      Margin="-10,5,0,0"
                                      Data="{StaticResource icon_music}"
                                      Fill="{TemplateBinding Foreground}"
                                      Stretch="Uniform" />
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Width="40"
                        Height="30"
                        Margin="110,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Background="#F4F5FE"
                        Command="{Binding LoopButton}"
                        Content="{Binding LoopType}"
                        Foreground="{Binding LoopButtonForeground}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Border Width="{TemplateBinding Width}"
                                        Height="{TemplateBinding Height}"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="7" />

                                <Path Width="20"
                                      Height="20"
                                      Margin="0,-10,0,0"
                                      Data="{StaticResource icon_looptop}"
                                      Stretch="Uniform"
                                      Stroke="{TemplateBinding Foreground}" />

                                <Path Width="20"
                                      Height="20"
                                      Margin="0,10,0,0"
                                      Data="{StaticResource icon_loopbottom}"
                                      Stretch="Uniform"
                                      Stroke="{TemplateBinding Foreground}" />

                                <TextBlock FontFamily="/BFPMusicPlayer;component/Assets/#Nunito Light"
                                           FontSize="0.5"
                                           Foreground="{TemplateBinding Foreground}"
                                           Text="{TemplateBinding ContentStringFormat}" />
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Width="30"
                        Height="30"
                        Margin="-95,5,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="white"
                        Command="{Binding BackCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Border Background="Transparent" />
                                <Path Width="20"
                                      Height="20"
                                      Data="{StaticResource icon_back}"
                                      Fill="#15111E"
                                      Stretch="Uniform" />
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <CheckBox HorizontalAlignment="Center"
                          Command="{Binding PlayCommand}"
                          IsChecked="{Binding Playing}"
                          Style="{StaticResource ButtonPlay}" />

                <Button Width="30"
                        Height="30"
                        Margin="95,5,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Background="White"
                        Command="{Binding NextCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Border Background="Transparent" />

                                <Path Width="20"
                                      Height="20"
                                      Data="{StaticResource icon_next}"
                                      Fill="#15111E"
                                      Stretch="Uniform" />
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>


                <Button Width="20"
                        Height="20"
                        Margin="0,5,130,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="White"
                        Command="{Binding VolDownCommand}"
                        Foreground="#15111E">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Border Background="Transparent" />

                                <Path Width="13"
                                      Height="13"
                                      Data="{StaticResource icon_voldown}"
                                      Fill="{TemplateBinding Foreground}"
                                      Stretch="Uniform" />
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Slider Width="80"
                        Margin="0,5,47,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Maximum="0.4"
                        Minimum="0"
                        Style="{StaticResource HorizontalSlider}"
                        Value="{Binding SliderVolValue}" />

                <Button Width="30"
                        Height="20"
                        Margin="0,5,20,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="White"
                        Command="{Binding VolUpCommand}"
                        Foreground="#15111E">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <Border Background="Transparent" />

                                <Path Width="13"
                                      Height="13"
                                      Data="{StaticResource icon_volup}"
                                      Fill="{TemplateBinding Foreground}"
                                      Stretch="Uniform" />
                                <Path Width="11"
                                      Height="11"
                                      Margin="18,0,0,0"
                                      Data="{StaticResource icon_volup1}"
                                      Fill="{TemplateBinding Foreground}"
                                      Stretch="Uniform" />

                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="420" />
                    <ColumnDefinition Width="70" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <TextBlock Margin="20,0,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontFamily="/BFPMusicPlayer;component/Assets/#Nunito Light"
                               Text="{Binding CurrentTime}" />
                </Grid>

                <Grid Grid.Column="1">
                    <Slider Width="420"
                            Margin="0,0,0,0"
                            Maximum="{Binding SliderMaxLocation}"
                            Minimum="0"
                            Style="{StaticResource HorizontalSlider}"
                            Thumb.DragCompleted="ThumbDragCompleted"
                            Thumb.DragDelta="ThumbDragDelta"
                            Thumb.DragStarted="ThumbDragStarted"
                            Value="{Binding SliderValue}" />
                </Grid>

                <Grid Grid.Column="2">
                    <TextBlock Margin="0,0,20,0"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Top"
                               FontFamily="/BFPMusicPlayer;component/Assets/#Nunito Light"
                               Text="{Binding EndTime}" />
                </Grid>
            </Grid>
        </Grid>
    </Border>
</UserControl>
